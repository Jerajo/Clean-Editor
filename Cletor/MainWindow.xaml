			<mah:Flyout
				x:Name="OptionsFlyout"
				Width="640"
				Header="{Binding Source={StaticResource Language}, Path=LabelOptions}"
				Position="Right">
				<ScrollViewer
					HorizontalScrollBarVisibility="Hidden"
					PanningMode="VerticalOnly"
					VerticalScrollBarVisibility="Auto">
					<StackPanel Margin="20,20,20,40" DataContext="{Binding Options}">
						<StackPanel Margin="0,10">
							<Label Content="{Binding Source={StaticResource Language}, Path=LabelLanguage}" Style="{StaticResource LabelHeader}" />
							<ComboBox
								ItemsSource="{Binding Languages}"
								SelectedItem="{Binding SelectedLanguage}"
								SelectionChanged="OnLanguageChanged"
								Style="{StaticResource CustomComboBox}"
								ToolTip="{Binding Source={StaticResource Language}, Path=OptionSelectALanguage}" />
						</StackPanel>

						<StackPanel Margin="0,10">
							<Label Content="{Binding Source={StaticResource Language}, Path=LabelFontFamily}" Style="{StaticResource LabelHeader}" />
							<ComboBox
								ItemsSource="{Binding FontFamilies}"
								SelectedItem="{Binding FontFamily}"
								SelectionChanged="OnFontFamilyChanged"
								Style="{StaticResource CustomComboBox}"
								ToolTip="{Binding Source={StaticResource Language}, Path=OptionSelectAFontFamily}" />
						</StackPanel>

						<StackPanel Margin="0,10">
							<Label Content="{Binding Source={StaticResource Language}, Path=LabelFontSize}" Style="{StaticResource LabelHeader}" />
							<mah:NumericUpDown
								Maximum="100"
								Minimum="8"
								Style="{StaticResource BaseFont}"
								TextAlignment="Left"
								ToolTip="{Binding Source={StaticResource Language}, Path=OptionSelectAFontSize}"
								ValueChanged="OnFontSizeChanged"
								Value="{Binding FontSize}" />
						</StackPanel>

						<StackPanel Margin="0,10">
							<Label Content="{Binding Source={StaticResource Language}, Path=LabelTheme}" Style="{StaticResource LabelHeader}" />
							<ComboBox
								ItemsSource="{Binding ThemeList}"
								SelectedItem="{Binding Theme}"
								SelectionChanged="OnThemeChanged"
								Style="{StaticResource CustomComboBox}"
								ToolTip="{Binding Source={StaticResource Language}, Path=OptionSelectATheme}" />
						</StackPanel>

						<StackPanel Margin="0,10">
							<Label Content="{Binding Source={StaticResource Language}, Path=LabelScreenMode}" Style="{StaticResource LabelHeader}" />
							<CheckBox
								Click="OnFullScreenToggle"
								Content="{Binding Source={StaticResource Language}, Path=LabelIsFullScreen}"
								IsChecked="{Binding IsFullScreen}"
								Style="{StaticResource BaseFont}"
								ToolTip="{Binding Source={StaticResource Language}, Path=LabelToggleFullScreen}" />
						</StackPanel>

						<StackPanel Margin="0,10">
							<Label Content="{Binding Source={StaticResource Language}, Path=LabelTemporalFilesPath}" Style="{StaticResource LabelHeader}" />
							<DockPanel>
								<Button
									Margin="10,0"
									Click="OnChangeTemporalFilesLocation"
									Content="{iconPacks:Modern Folder}"
									DockPanel.Dock="Right"
									ToolTip="{Binding Source={StaticResource Language}, Path=ToolTipChangeTemporalFilesCommand}" />
								<TextBox
									IsReadOnly="True"
									Style="{StaticResource CustomTextBox}"
									Text="{Binding TemporalFilesPath}"
									ToolTip="{Binding Source={StaticResource Language}, Path=OptionCurrentPath}" />
							</DockPanel>
						</StackPanel>
					</StackPanel>
				</ScrollViewer>
			</mah:Flyout>
